{
    "name": "SpeechEmotion1D",
    "n_gpu": 1,

    "arch": {
        "type": "Model1D",
        "args": {
            "emotions": 7
        }
    },
    "data_loader": {
        "type": "EMOVODataLoader",
        "args": {
            "data_dir": "data/EMOVO/",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
